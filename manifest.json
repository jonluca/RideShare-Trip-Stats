{
  "manifest_version": 3,
  "name": "RideShare Trip Stats",
  "version": "10.0",
  "description": "Analyzes your rideshare profile to show statistics on your rides!",
  "permissions": ["tabs", "scripting", "storage", "unlimitedStorage"],
  "host_permissions": [
    "https://uber.com/*",
    "https://*.uber.com/*",
    "https://*.ubereats.com/*"
  ],
  "action": { "default_title": "Click to run" },
  "homepage_url": "https://jonlu.ca",
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "src/scripts/background",
    "type": "module"
  }
}
