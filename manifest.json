{
  "manifest_version": 3,
  "name": "RideShare Trip Stats",
  "version": "11.0",
  "description": "Visit https://www.uber.com/us/en/rider-home/ to view your uber statistics",
  "permissions": ["tabs", "scripting", "storage", "unlimitedStorage"],
  "host_permissions": ["https://uber.com/*", "https://*.uber.com/*", "https://*.ubereats.com/*"],
  "action": { "default_title": "Click to run" },
  "homepage_url": "https://jonlu.ca",
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "src/scripts/background",
    "type": "module"
  }
}
